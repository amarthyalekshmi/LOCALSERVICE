  <!-- Template Main CSS File -->
  <link href="../assets/css/style.css" rel="stylesheet">
  <link href="../assets/css/empIndex.css" rel="stylesheet">

</head>

<body>

  <!-- ======= Header ======= -->
   <%- include('header.ejs') %>
  <!-- End Header -->

  <!-- ======= Sidebar ======= -->
   <%- include('aside.ejs') %>
  <!-- End Sidebar-->

  <main id="main" class="main">

    <h4>Booking Completed</h4>

    <table class="table table-borderless datatable">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Booking No</th>
            <th scope="col">Booked By</th>
            <th scope="col">Place</th>
            <th scope="col">Date Time</th>
            <th scope="col">Rating</th>
            <th scope="col">Status</th>

          </tr>
        </thead>
        <tbody>
            <% let count = 1; %>
            <% bookings.forEach(booking => { %>
                <tr>
                    <td scope="row"><%= count; %></td>
                    <td scope="row"><%= booking.bookingNo %></td>
                    <td scope="row"><%= booking.user.name %></td>
                    <td scope="row"><%= booking.user.place %></td>
                    <td scope="row">
                        <%= new Date(booking.createdAt).toLocaleDateString('en-GB') %> 
                        <%= new Date(booking.createdAt).toLocaleTimeString('en-GB', { hour: '2-digit', minute: '2-digit' }) %>
                    </td>
                    <td scope="row">
                        <b><%= booking.rating ? booking.rating.score : 'Not Rated' %></b> ‚≠ê
                    </td>
                    <td scope="row">
                        <span 
                        style="background-color: rgb(31, 214, 70); display: block; text-align: center;
                        padding: 5px; border-radius: 4px; font-weight: bold;"><%= booking.status %></span>
                    </td>
                </tr>
                <% count ++; %>
              <% }) %>
        </tbody>
      </table>

    
    
  </main>

  <!-- ======= Footer ======= -->
   <%- include('footer.ejs') %>
  <!-- End Footer -->

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

